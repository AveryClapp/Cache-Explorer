{
  "name": "cache-explorer",
  "displayName": "Cache Explorer",
  "description": "Visual cache profiler for C, C++, and Rust - see how your code interacts with CPU cache hierarchies",
  "version": "0.1.0",
  "publisher": "cache-explorer",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "cache",
    "profiler",
    "performance",
    "optimization",
    "cpu",
    "memory"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cacheExplorer.profileCurrentFile",
        "title": "Cache Explorer: Profile Current File"
      },
      {
        "command": "cacheExplorer.showResults",
        "title": "Cache Explorer: Show Results"
      }
    ],
    "configuration": {
      "title": "Cache Explorer",
      "properties": {
        "cacheExplorer.serverUrl": {
          "type": "string",
          "default": "ws://localhost:3001/ws",
          "description": "WebSocket URL of the Cache Explorer server"
        },
        "cacheExplorer.hardwarePreset": {
          "type": "string",
          "default": "modern-desktop",
          "enum": [
            "modern-desktop",
            "laptop",
            "server",
            "embedded",
            "custom"
          ],
          "enumDescriptions": [
            "Modern desktop CPU (Intel/AMD, large L3)",
            "Laptop CPU (balanced power/performance)",
            "Server CPU (large caches, high associativity)",
            "Embedded processor (smaller caches)",
            "Custom configuration"
          ],
          "description": "Hardware preset for cache simulation"
        },
        "cacheExplorer.showInlineAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Show cache hit/miss annotations inline in the editor"
        },
        "cacheExplorer.autoProfile": {
          "type": "boolean",
          "default": false,
          "description": "Automatically profile file on save"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "cacheExplorer.resultsView",
          "name": "Cache Explorer",
          "contextualTitle": "Cache Explorer Results"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "cacheExplorer.profileCurrentFile",
          "when": "resourceLangId == c || resourceLangId == cpp || resourceLangId == rust",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ws": "^8.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cache-explorer/cache-explorer"
  },
  "license": "MIT"
}
